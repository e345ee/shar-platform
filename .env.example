APP_MAIL_ENABLED=false

APP_MAIL_FROM=no-reply@course.local

# ------------------------------
# Backend runtime config
# ------------------------------
#
# Spring Boot reads these environment variables automatically.
# If you run on a shared server, DO NOT commit real passwords to a public repo.

# Postgres (JDBC)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/course_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Postgres (psql helpers) - used by Makefile to apply SQL scripts.
PGHOST=localhost
PGPORT=5432
PGDATABASE=course_db
PGUSER=postgres
PGPASSWORD=postgres
PGSSLMODE=prefer

# MinIO / S3-compatible storage
APP_S3_ENDPOINT=http://127.0.0.1:9000
APP_S3_REGION=us-east-1
APP_S3_ACCESS_KEY=minioadmin
APP_S3_SECRET_KEY=minioadmin
APP_S3_BUCKET=avatars
APP_S3_PUBLIC_URL=http://127.0.0.1:9000

SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_gmail@gmail.com
SPRING_MAIL_PASSWORD=your_google_app_password
SPRING_MAIL_SMTP_AUTH=true
SPRING_MAIL_SMTP_STARTTLS=true
